  file     = {:C$\backslash$:/Users/Jesse/AppData/Local/Mendeley Ltd/Mendeley Desktop/Downloaded/2010 - Spatial decision forests for MS lesion segmentation in multi-channel magnetic resonance images.pdf:pdf},
  keywords = {Algorithms,Brain Mapping,Computer-Assisted,Decision Trees,Humans,Image Interpretation,Magnetic Resonance Imaging,Multiple Sclerosis,methods,pathology},
  language = {eng},
  pmid     = {21497655},
}

